<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.bawei.admin.wdcinema.activity.FilmShowActivity">

    <RelativeLayout
        android:id="@+id/cinema_relative"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/cinemasdv"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_marginLeft="24dp"
            android:layout_marginTop="30dp"
            android:src="@drawable/cinemadetail_icon_location_default" />

        <TextView
            android:id="@+id/cimema_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="6dp"
            android:layout_marginTop="30dp"
            android:layout_toRightOf="@+id/cinemasdv"
            android:text="北京" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:layout_marginRight="24dp"
        android:layout_marginLeft="24dp">

        <Button
            android:layout_width="83dp"
            android:layout_height="25dp"
            android:text="推荐影院"
            android:textColor="#333333"
            android:textSize="14sp"
            android:background="@drawable/btm_sel"
            android:layout_alignParentLeft="true"/>

        <Button
            android:layout_width="83dp"
            android:layout_height="25dp"
            android:text="附近影院"
            android:textColor="#333333"
            android:textSize="14sp"
            android:background="@drawable/btm_sel"
            android:layout_centerHorizontal="true"/>

        <Button
            android:layout_width="83dp"
            android:layout_height="25dp"
            android:text="附近影院"
            android:textColor="#333333"
            android:textSize="14sp"
            android:background="@drawable/btm_sel"
            android:layout_alignParentRight="true"/>


    </RelativeLayout>

    <android.support.v7.widget.RecyclerView
        android:id="@+id/cinemarecycleview"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="24dp"
        android:layout_marginTop="10dp"
        android:layout_marginRight="24dp"
        android:layout_weight="1"></android.support.v7.widget.RecyclerView>
</LinearLayout>
