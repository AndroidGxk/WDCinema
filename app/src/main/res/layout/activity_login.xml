<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center_horizontal"
    android:clickable="true"
    android:focusableInTouchMode="true"
    android:background="@drawable/reg"
    android:padding="36dp">


    <RelativeLayout
        android:id="@+id/Mr_1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="110dp">

        <ImageView
            android:id="@+id/mIv_Phone"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginTop="10dp"
            android:src="@drawable/log_icon_phone_default" />

        <EditText
            android:id="@+id/my_login_phone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/mIv_Phone"
            android:layout_marginLeft="40dp"
            android:background="@null"
            android:hint="手机号"
            android:inputType="number"
            android:maxLength="11"
            android:padding="10dp"
            android:textColor="#ffffff"
            android:textColorHint="#E0E0E0" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_below="@+id/mIv_Phone"
            android:layout_marginTop="10dp"
            android:background="#ffffff"></View>

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/mR2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/Mr_1"
        android:layout_marginTop="20dp">

        <ImageView
            android:id="@+id/mIv_lock"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginTop="10dp"
            android:src="@drawable/log_icon_lock_default" />

        <EditText
            android:id="@+id/my_login_pwd"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/mIv_lock"
            android:layout_marginLeft="40dp"
            android:background="@null"
            android:hint="登录密码"
            android:inputType="textPassword"
            android:padding="10dp"
            android:textColor="#ffffff"
            android:textColorHint="#E0E0E0" />

        <ImageView
            android:id="@+id/mIv_eye"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_alignParentRight="true"
            android:layout_marginTop="10dp"
            android:src="@drawable/log_icon_eye_default" />


        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_below="@+id/mIv_lock"
            android:layout_marginTop="10dp"
            android:background="#ffffff"></View>

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/mR3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/mR2"
        android:layout_marginTop="20dp"
        android:gravity="center_vertical">

        <LinearLayout
            android:id="@+id/mCb_Pwd_Login"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <CheckBox
                android:id="@+id/rem_check"
                android:layout_width="18dp"
                android:layout_height="18dp"
                android:background="@drawable/item_checked"
                android:button="@null" />


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_toRightOf="@+id/mCb_Pwd_Login"
                android:text="记住密码"
                android:textColor="#E0E0E0"
                android:textSize="16sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/mCb_Pwd_Login"
            android:orientation="horizontal">

            <CheckBox
                android:id="@+id/mCb_Auto_Login"
                android:layout_width="18dp"
                android:layout_height="18dp"
                android:layout_marginLeft="10dp"
                android:background="@drawable/item_checked"
                android:button="@null" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_toRightOf="@+id/mCb_Auto_Login"
                android:text="自动登录"
                android:textColor="#E0E0E0"
                android:textSize="16sp" />
        </LinearLayout>

        <TextView
            android:id="@+id/regis_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginLeft="15dp"
            android:background="@null"
            android:padding="0dp"
            android:text="快速注册"
            android:textColor="#E0E0E0"
            android:textSize="16sp" />
    </RelativeLayout>

    <Button
        android:id="@+id/my_login_btn"
        android:layout_width="300dp"
        android:layout_height="50dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="150dp"
        android:background="@drawable/sign_btn_shape"
        android:text="登录"
        android:textColor="#fff" />

    <LinearLayout
        android:id="@+id/rl"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="105dp"
        android:gravity="center"
        android:orientation="horizontal">
        <!--画左边的那条线-->
        <View
            android:layout_width="wrap_content"
            android:layout_height="1dp"
            android:layout_weight="1"
            android:background="@android:color/darker_gray" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:text="第三方账号快速登录"
            android:textColor="@android:color/white" />
        <!--画右边的那条线-->
        <View
            android:layout_width="wrap_content"
            android:layout_height="1dp"
            android:layout_weight="1"
            android:background="@android:color/darker_gray" />
    </LinearLayout>

    <ImageView
        android:id="@+id/mIv_WeChat"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="60dp"
        android:src="@drawable/log_icon_weixin_default" />

</RelativeLayout>