<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginTop="45dp"
    android:orientation="vertical"
    android:paddingLeft="24dp"
    android:paddingRight="24dp"
    tools:context=".activity.CinemasListByMovieIdActivity">

    <TextView
        android:id="@+id/moview_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="2dp"
        android:text="影城"
        android:textColor="#333333"
        android:textSize="18sp" />

    <TextView
        android:id="@+id/aa"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/moview_name"
        android:layout_marginLeft="2dp"
        android:layout_marginTop="10dp"
        android:text="选择合适的影院"
        android:textColor="#b11450"
        android:textSize="10sp" />

    <android.support.v7.widget.RecyclerView
        android:id="@+id/movie_recycler"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/aa"
        android:layout_marginTop="10dp"></android.support.v7.widget.RecyclerView>

    <ImageView
        android:id="@+id/cinemas_finish"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_alignParentBottom="true"
        android:layout_centerVertical="true"
        android:layout_marginBottom="20dp"
        android:background="@drawable/com_icon_myback_default" />
</RelativeLayout>