<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="100dp"
    android:background="@drawable/shadow_shape"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/pl1"
        android:layout_marginTop="10dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/pay_ting"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:text="中影I Do巨幕全景声厅" />

        <TextView
            android:id="@+id/pay_yuyan"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:text="国语3D" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/pl1"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="10dp">

        <TextView
            android:id="@+id/pay_starttime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="14:40"
            android:textColor="#333333"
            android:textSize="24sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=" 一 "
            android:textColor="#666666"
            android:textSize="24sp" />

        <TextView
            android:id="@+id/pay_endtime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="19:26"
            android:textColor="#666666"
            android:textSize="18sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:text="end"
            android:textColor="#666666"
            android:textSize="12sp" />
    </LinearLayout>

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/pl1"
        android:layout_alignParentRight="true"
        android:layout_marginRight="30dp">

        <TextView
            android:id="@+id/pay_y"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentLeft="true"
            android:layout_marginStart="0dp"
            android:layout_marginLeft="0dp"
            android:layout_marginTop="15dp"
            android:textSize="18sp"
            android:text="¥" />

        <TextView
            android:id="@+id/pay_money"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="6dp"
            android:layout_toRightOf="@id/pay_y"
            android:text="53.9"
            android:textColor="#a20055"
            android:textSize="36sp" />
    </RelativeLayout>

    <ImageView
        android:id="@+id/go_image"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:layout_marginLeft="10dp"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginTop="20dp"
        android:src="@drawable/com_icon_next_default" />
</RelativeLayout>
