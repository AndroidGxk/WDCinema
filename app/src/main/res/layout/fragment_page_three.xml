<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="230dp"
        android:background="@drawable/mybackgrounp">

        <ImageView
            android:id="@+id/mes_image"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_marginLeft="24dp"
            android:layout_marginTop="40dp"
            android:src="@drawable/my_icon_remind_default" />

        <com.facebook.drawee.view.SimpleDraweeView
            android:id="@+id/myheader"
            android:layout_width="72dp"
            android:layout_height="72dp"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="70dp"
            app:roundAsCircle="true" />

        <TextView
            android:id="@+id/myname"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/myheader"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="10dp"
            android:text="未登录"
            android:textColor="#ffffff"
            android:textSize="14sp" />

        <Button
            android:id="@+id/usersigin"
            android:layout_width="66dp"
            android:layout_height="28dp"
            android:layout_below="@+id/myname"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="12dp"
            android:background="@drawable/sign_btn_shape"
            android:text="签到"
            android:textColor="#ffffff"
            android:textSize="14sp" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="5dp"
        android:layout_marginRight="20dp"
        android:background="@drawable/shadow_shape"
        android:paddingLeft="30dp">

        <LinearLayout
            android:id="@+id/massge_linea"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/mymessage"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_centerVertical="true"
                android:layout_gravity="center_horizontal"
                android:src="@drawable/my_icon_messiage_default" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/mymessage"
                android:layout_marginTop="10dp"
                android:text="我的信息"
                android:textColor="@color/radiot"
                android:textSize="12sp" />
        </LinearLayout>
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:background="@drawable/shadow_shape"
        android:paddingLeft="30dp">

        <LinearLayout
            android:id="@+id/mylinear_two"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/myguanzhu"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_centerVertical="true"
                android:layout_gravity="center_horizontal"
                android:src="@drawable/my_icon_attention_default" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/myguanzhu"
                android:layout_marginTop="10dp"
                android:text="我的关注"
                android:textColor="@color/radiot"
                android:textSize="12sp" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/goupiao"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="54dp"
            android:layout_toRightOf="@+id/mylinear_two"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/mygoupiao"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_centerVertical="true"
                android:layout_gravity="center_horizontal"
                android:src="@drawable/my_icon_rccord_default" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/mygoupiao"
                android:layout_marginTop="10dp"
                android:text="购票记录"
                android:textColor="@color/radiot"
                android:textSize="12sp" />
        </LinearLayout>
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:background="@drawable/shadow_shape"
        android:paddingLeft="30dp">

        <LinearLayout
            android:id="@+id/mylinear_three"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/myyijian"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_centerVertical="true"
                android:layout_gravity="center_horizontal"
                android:src="@drawable/my_icon_feedback_default" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/myyijian"
                android:layout_marginTop="10dp"
                android:text="意见反馈"
                android:textColor="@color/radiot"
                android:textSize="12sp" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/mylinear_four"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="54dp"
            android:layout_toRightOf="@+id/mylinear_three"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/myzuixin"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_centerVertical="true"
                android:layout_gravity="center_horizontal"
                android:src="@drawable/my_icon_version_default" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/myyijian"
                android:layout_marginTop="10dp"
                android:text="最新版本"
                android:textColor="@color/radiot"
                android:textSize="12sp" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/back_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="54dp"
            android:layout_toRightOf="@+id/mylinear_four"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/mytuichu"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_centerVertical="true"
                android:layout_gravity="center_horizontal"
                android:src="@drawable/my_icon_logout_default" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/mytuichu"
                android:layout_marginTop="10dp"
                android:text="退出登录"
                android:textColor="@color/radiot"
                android:textSize="12sp" />
        </LinearLayout>
    </RelativeLayout>
</LinearLayout>
