<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center">

    <RelativeLayout
        android:id="@+id/twopopularsdvone"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="120dp"
        android:background="@drawable/shape_dialog">

        <ImageView
            android:id="@+id/popupwindow_detalis_sdvtwo"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_alignParentRight="true"
            android:layout_marginRight="24dp"
            android:src="@drawable/com_icon_down_default" />

    </RelativeLayout>

    <com.facebook.drawee.view.SimpleDraweeView
        android:id="@+id/popupwindow_detalis_sdvone"
        android:layout_width="111dp"
        android:layout_height="149dp"
        android:layout_marginLeft="24dp"
        android:layout_marginTop="90dp"
        android:layout_marginBottom="10dp"
        android:background="@drawable/baobeier" />

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_toRightOf="@+id/popupwindow_detalis_sdvone">

        <TextView
            android:id="@+id/popupwindow_detalis_leixing"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="140dp"
            android:text="类型"
            android:textColor="#333333"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/popupwindow_detalis_daoyan"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/popupwindow_detalis_leixing"
            android:layout_marginTop="10dp"
            android:text="导演"
            android:textColor="#333333"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/popupwindow_detalis_shichang"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/popupwindow_detalis_daoyan"
            android:layout_marginTop="10dp"
            android:text="时长"
            android:textColor="#333333"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/popupwindow_detalis_chandi"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/popupwindow_detalis_shichang"
            android:layout_marginTop="10dp"
            android:text="产地"
            android:textColor="#333333"
            android:textSize="12sp" />

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/one"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/popupwindow_detalis_sdvone"
        android:layout_marginLeft="24dp"
        android:layout_marginTop="20dp"
        android:layout_marginRight="24dp">

        <TextView
            android:id="@+id/jianjie"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="剧情简介"
            android:textColor="#333333"
            android:textSize="16dp" />

        <View
            android:id="@+id/lineone"
            android:layout_width="30dp"
            android:layout_height="3dp"
            android:layout_below="@+id/jianjie"
            android:layout_marginTop="4dp"
            android:background="@drawable/re_shape" />

        <TextView
            android:id="@+id/plot"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/lineone"
            android:layout_marginTop="10dp"
            android:text="呵呵呵呵呵呵呵呵呵呵"
            android:textColor="#333333"
            android:textSize="12sp" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/two"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/one"
        android:layout_marginLeft="24dp"
        android:layout_marginTop="20dp"
        android:layout_marginRight="24dp">

        <TextView
            android:id="@+id/yanzhi"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="演职人员"
            android:textColor="#333333"
            android:textSize="16dp" />

        <View
            android:id="@+id/linetwo"
            android:layout_width="30dp"
            android:layout_height="3dp"
            android:layout_below="@+id/yanzhi"
            android:layout_marginTop="4dp"
            android:background="@drawable/re_shape" />

        <Button
            android:id="@+id/buttonname"
            android:layout_width="75dp"
            android:layout_height="32dp"
            android:layout_below="@+id/linetwo"
            android:layout_marginTop="10dp"
            android:background="@drawable/xq_shape"
            android:text="演员名字"
            android:textColor="#ffffff"
            android:textSize="12sp" />

        <Button
            android:layout_width="75dp"
            android:layout_height="32dp"
            android:layout_alignTop="@+id/buttonname"
            android:layout_alignParentRight="true"
            android:layout_centerInParent="true"
            android:layout_centerHorizontal="true"
            android:background="@drawable/xqs_shape"
            android:text="饰演角色"
            android:textColor="#ffffff"
            android:textSize="12sp" />

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/three"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/two"
        android:layout_marginLeft="24dp"
        android:layout_marginTop="12dp"
        android:layout_marginRight="24dp">

        <TextView
            android:id="@+id/weizhi"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="未知" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:text="饰" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:text="未知" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_below="@+id/weizhi"
            android:layout_marginTop="10dp"
            android:background="#f2f2f2" />

    </RelativeLayout>
</RelativeLayout>